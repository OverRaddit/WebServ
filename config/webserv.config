server {
	listen 41;
	server_name localhost;

	root sudo;

	cgi cgi_tester;

	error_page 404 /errors/404.html;

	location /post {
		limit_except POST;
		client_max_body_size 50M;
	}
}

server {
	listen 41;

	server_name example.com;

	root sudo;

	cgi cgi_tester;

	error_page 404 /errors/404.html;

	location /post {
		limit_except POST;
		client_max_body_size 50M;
	}
}

server {
	listen 4141;

	root sudo;

	index index.html;

	error_page 404 /errors/404.html;

	location / {
		limit_except GET;
	}

	location /upload {
		limit_except POST;
		client_max_body_size 50M;
		upload file_storage;
	}

	location /delete {
		limit_except DELETE;
	}

	location /autoindex {
		autoindex on;
		root file_storage;
	}

	location /redirection {
		limit_except GET;
		return https://profile.intra.42.fr/;
	}
}
